{
  "manifest_version": 2,
  "name": "CSS Class Navigator",
  "version": "1.0",
  "description": "Navigate through highlighted elements by class name",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
